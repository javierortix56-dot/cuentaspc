            <div class="form-group">
                <label>Monto</label>
                <input type="number" id="fAmount" placeholder="0.00" step="0.01" required>
            </div>

            <div style="display:flex; gap:10px;">
                <div class="form-group" style="flex:1;">
                    <label>Tipo</label>
                    <select id="fType" onchange="renderCats()">
                        <option value="exp">ðŸ”´ Gasto</option>
                        <option value="inc">ðŸŸ¢ Ingreso</option>
                    </select>
                </div>
                <div class="form-group" style="flex:1.5;">
                    <label>CategorÃ­a</label>
                    <select id="fCat" onchange="renderConcepts()" required></select>
                </div>
            </div>

            <div class="form-group">
                <label>Concepto</label>
                <select id="fConcept" onchange="checkNewConcept()" required></select>
                <input type="text" id="fConceptCustom" placeholder="Nuevo concepto..." style="display:none; margin-top:5px;">
            </div>

            <div class="form-group" style="display:flex; align-items:center; gap:8px;">
                <input type="checkbox" id="fExec" checked style="width:18px; height:18px; margin:0;">
                <label style="margin:0; cursor:pointer;" for="fExec">Movimiento ya ejecutado</label>
            </div>

            <button type="submit" id="btnSave" class="btn-main">Guardar</button>
