        <form id="txForm">
            <h3 style="margin: 0 0 15px 0; font-size:14px; color:var(--text-1);">Nuevo Movimiento</h3>
            
            <div class="form-group">
                <label>Fecha</label>
                <input type="date" id="fDate" required>
